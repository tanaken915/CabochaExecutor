<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
	<comment>コメント</comment>
	<!-- 必須: OSごとのCaboCha起動コマンド -->
	<entry key="command-windows">cmd /c cabocha</entry>
	<entry key="command-macos">/usr/local/bin/cabocha</entry>
	
	<!-- 必須: CaboCha実行プロセスの最大待ち時間 -->
	<entry key="wait">100</entry>
	
	<!-- 必須: CaboCha実行時に使う入出力用一時ファイルのパス -->
	<!-- "output-file"オプションとは関係なく使われる可能性がある。同じパスでもいい -->
	<entry key="input-tmpfile">tmp/cabochaexec/CaboChaInput.tmp</entry>
	<entry key="output-tmpfile">tmp/cabochaexec/CaboChaOutput.tmp</entry>
	
	<!-- 任意: CaboChaのオプション -->
	<!-- インスタンス生成時や生成後に設定し直すことも可能 -->
	<entry key="output-format">1</entry>
	<entry key="named-entity">0</entry>
	<!-- <entry key="output-file">dest/cabocha/parsed.txt</entry> -->
</properties>